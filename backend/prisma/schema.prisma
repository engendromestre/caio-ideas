generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Idea {
  id              Int      @id @default(autoincrement())
  authorId        String   // RE do colaborador
  improvement     String   // What can be improved
  currentProcess  String   // How it's done today
  proposedChange  String   // How it can be improved
  expectedBenefit String   // Expected benefit
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt

  @@map("ideas") // Table name in the database
}
